{
   // See https://go.microsoft.com/fwlink/?LinkId=733558 
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "type": "shell",
         "label": "cmake build",
         "command": "/usr/bin/cmake",
         "args": [
            ".."
         ],
         "options": {
            "cwd": "${workspaceFolder}/build"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": "build"
      },
      {
         "type": "shell",
         "label": "make build",
         "command": "/usr/bin/make",
         "options": {
            "cwd": "${workspaceFolder}/build"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "dependsOn": [
            "cmake build"
         ]
      }
   ]
}